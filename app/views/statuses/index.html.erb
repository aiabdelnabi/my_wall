<div class="row">
  <div class="col-md-12">
      <div class="col-md-12">
        <h3>Wall Statuses  <%= link_to 'New Status', new_status_path, class: "btn btn-primary" %> </h3>
      </div>
      <div class="col-md-12">
              <% @statuses.each do |status| %>
               <div class="col-md-12 status-card">
                  <div class="col-md-4" id="<%= dom_id(status) %>">
                      <h1><%= status.title %></h1>
                      <p><%= status.content %> , <%= time_since(status.created_at) %></p>
                      <ul class="nav nav-pills">
                          <li><%= link_to 'Show', status %></li>
                          <li><%= link_to 'Edit', edit_status_path(status) %></li>
                          <li><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                      </ul>
                  </div>
                  <div class="col-md-8 well comments-total">
                    <%= link_to 'Comments', status_comments_path(status) %> (<%= status.comments.count %>)
                    <ul class="top-comments nav nav-pills">
                        <% status.top_comments.each do |top_comment| %>
                            <li class="top-comments-item"><%= top_comment.body %> , <%= time_since(top_comment.created_at) %></li>
                        <% end %>         
                    </ul>
                  </div>
                 
                 </div>
              <% end %>
          <br>
      </div>
  </div>
</div>